{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": [
        "shared/*"
      ],
      "@/backend/*": [
        "api/src/*"
      ],
      "@/frontend/*": [
        "frontend/src/*"
      ]
    }
  },
  "include": [
    "api/src/**/*",
    "frontend/src/**/*",
    "services/*/src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}