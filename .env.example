# .env.example

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:6969/motriforge?schema=public"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV="development"
APP_PORT=8000
APP_HOST="localhost"

# ===========================================
# MICROSERVICES PORTS
# ===========================================
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
EXERCISE_SERVICE_PORT=3003
WORKOUT_SERVICE_PORT=3004
PROGRAM_SERVICE_PORT=3005
MEDIA_SERVICE_PORT=3006
CACHE_SERVICE_PORT=3007
ERROR_SERVICE_PORT=3008

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# ===========================================
# CLOUDFLARE R2 CONFIGURATION
# ===========================================
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="motriforge-media"
R2_PUBLIC_URL="https://your-bucket.r2.dev"

# ===========================================
# REDIS CONFIGURATION (for caching)
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL="debug"
LOG_FORMAT="pretty"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
ENABLE_PLAYGROUND="true"
ENABLE_INTROSPECTION="true"