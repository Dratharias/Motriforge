# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/motriforge
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/motriforge_test

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3000
VITE_APP_URL=http://localhost:3000

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-change-in-production
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Cloudflare R2 Configuration (for file storage)
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_R2_BUCKET_NAME=motriforge-assets
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev

# External Services (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@motriforge.com
SMTP_PASS=your-smtp-password
SMTP_SECURE=true

# Observability & Monitoring
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
ENABLE_OBSERVABILITY_DASHBOARD=true
ENABLE_AUDIT_EXPORT=false
ENABLE_CACHE_WARMING=true

# Development Tools
ENABLE_DRIZZLE_STUDIO=true
ENABLE_DEBUG_LOGGING=true

# Production Overrides (set these in production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_DEBUG_LOGGING=false
# JWT_SECRET=your-production-jwt-secret
# SESSION_SECRET=your-production-session-secret