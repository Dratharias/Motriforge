        "build:notification-service": "npm --workspace=services/notification-service run build",
        "build:payment-service": "npm --workspace=services/payment-service run build",
        "build:permission-service": "npm --workspace=services/permission-service run build",
        "build:physics-service": "npm --workspace=services/physics-analysis-service run build",
        "build:program-service": "npm --workspace=services/program-service run build",
        "build:settings-service": "npm --workspace=services/settings-service run build",
        "build:user-service": "npm --workspace=services/user-service run build",
        "build:workout-service": "npm --workspace=services/workout-service run build",
        "start": "npm-run-all --parallel start:api start:services",
        "start:frontend": "npm --workspace=frontend run preview",
