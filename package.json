        "install:all": "npm install",
        "check:workspaces": "node -e \"const fs=require('fs'); const ws=['frontend','api']; ws.forEach(w=>!fs.existsSync(w)&&console.warn('Missing workspace:',w));\"",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "db:migrate": "npm --workspace=services/user-service run db:migrate",
        "db:seed": "npm --workspace=services/user-service run db:seed",
        "db:reset": "npm run db:migrate && npm run db:seed"
