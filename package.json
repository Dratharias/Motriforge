{
    "name": "motriforge-platform",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vinxi build",
        "dev": "vinxi dev",
        "preview": "vinxi preview",
        "start": "vinxi start",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint src --ext ts,tsx --fix",
        "type-check": "tsc --noEmit",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:seed": "tsx backend/database/seed.ts",
        "db:cleanup": "tsx scripts/cleanup-database.ts",
        "db:reset": "npm run db:cleanup && npm run db:migrate && npm run db:seed",
        "db:setup": "npm run db:migrate && npm run db:seed",
        "test": "npm run db:test:setup && vitest --config vitest.config.ts",
        "test:ui": "npm run db:test:setup && vitest --ui",
        "test:coverage": "npm run db:test:setup && vitest --coverage",
        "test:watch": "npm run db:test:setup && vitest --watch",
        "test:isolated": "npm run db:test:setup && tsx scripts/run-tests-isolated.ts",
        "test:single": "npm run db:test:setup && vitest run --config vitest.config.ts",
        "test:debug": "npm run db:test:setup && vitest --config vitest.config.ts --reporter=verbose --bail=1",
        "test:debug-event": "npm run db:test:setup && bash scripts/run-debug-test.sh",
        "test:simple": "npm run db:test:setup && npx vitest run tests/services/event-service-simple.test.ts --reporter=verbose",
        "db:test:setup": "tsx scripts/test-database-setup.ts setup",
        "db:test:cleanup": "tsx scripts/test-database-setup.ts cleanup", 
        "db:test:reset": "tsx scripts/test-database-setup.ts reset",
        "db:test:check": "tsx scripts/run-tests-isolated.ts --db-check",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "format": "prettier --write src/**/*.{ts,tsx}",
        "format:check": "prettier --check src/**/*.{ts,tsx}"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.826.0",
        "@aws-sdk/s3-request-presigner": "^3.826.0",
        "@paralleldrive/cuid2": "^2.2.2",
        "@solidjs/router": "^0.15.3",
        "@solidjs/start": "^1.1.4",
        "@types/bcryptjs": "^3.0.0",
        "@types/jsonwebtoken": "^9.0.9",
        "bcryptjs": "^3.0.2",
        "drizzle-orm": "^0.44.2",
        "jsonwebtoken": "^9.0.2",
        "msw": "^2.10.2",
        "nanoid": "^5.1.5",
        "postgres": "^3.4.7",
        "solid-js": "^1.9.7",
        "vinxi": "^0.5.7",
        "zod": "^3.25.61"
    },
    "devDependencies": {
        "@solidjs/meta": "^0.29.4",
        "@solidjs/testing-library": "^0.8.10",
        "@tailwindcss/typography": "^0.5.16",
        "@testing-library/jest-dom": "^6.6.3",
        "@types/node": "^24.0.1",
        "@typescript-eslint/eslint-plugin": "^8.34.0",
        "@typescript-eslint/parser": "^8.34.0",
        "@vitest/coverage-v8": "^3.2.3",
        "@vitest/ui": "^3.2.3",
        "autoprefixer": "^10.4.21",
        "dotenv": "^16.5.0",
        "drizzle-kit": "^0.31.1",
        "eslint": "^9.28.0",
        "eslint-plugin-solid": "^0.14.5",
        "glob": "^11.0.0",
        "postcss": "^8.5.5",
        "prettier": "^3.5.3",
        "tailwindcss": "^4.1.9",
        "tsx": "^4.20.1",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.2.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}