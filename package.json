    "devDependencies": {
        "@types/node": "^20.10.6",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^8.0.0",
        "npm-check-updates": "^18.0.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.3.3"
