{
    "name": "motriforge",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "frontend",
        "api",
        "services/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
        "dev:frontend": "npm --workspace=frontend run dev",
        "dev:api": "npm --workspace=api run dev",
        "dev:services": "concurrently -k \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:exercise\" \"npm run dev:workout\"",
        "dev:auth": "npm --workspace=services/auth-service run dev",
        "dev:user": "npm --workspace=services/user-service run dev",
        "dev:exercise": "npm --workspace=services/exercise-service run dev",
        "dev:workout": "npm --workspace=services/workout-service run dev",
        "dev:program": "npm --workspace=services/program-service run dev",
        "dev:media": "npm --workspace=services/media-service run dev",
        "dev:cache": "npm --workspace=services/cache-service run dev",
        "dev:audit": "npm --workspace=services/audit-service run dev",
        "dev:error": "npm --workspace=services/error-service run dev",
        "dev:notification": "npm --workspace=services/notification-service run dev",
        "dev:permission": "npm --workspace=services/permission-service run dev",
        "dev:content": "npm --workspace=services/content-service run dev",
        "dev:payment": "npm --workspace=services/payment-service run dev",
        "dev:settings": "npm --workspace=services/settings-service run dev",
        "dev:analytics": "npm --workspace=services/analytics-service run dev",
        "dev:data-lifecycle": "npm --workspace=services/data-lifecycle-service run dev",
        "dev:cross-domain": "npm --workspace=services/cross-domain-service run dev",
        "dev:physics": "npm --workspace=services/physics-analysis-service run dev",
        "build": "npm run build:api && npm run build:frontend",
        "build:frontend": "npm --workspace=frontend run build",
        "build:api": "npm --workspace=api run build",
        "build:services": "npm-run-all --parallel build:auth-service build:user-service build:exercise-service build:workout-service build:program-service build:media-service build:cache-service build:audit-service build:error-service build:notification-service build:permission-service build:content-service build:payment-service build:settings-service build:analytics-service build:data-lifecycle-service build:cross-domain-service build:physics-service",
        "build:analytics-service": "npm --workspace=services/analytics-service run build",
        "build:audit-service": "npm --workspace=services/audit-service run build",
        "build:auth-service": "npm --workspace=services/auth-service run build",
        "build:cache-service": "npm --workspace=services/cache-service run build",
