        "test:audit-service": "npm --workspace=services/audit-service run test",
        "test:error-service": "npm --workspace=services/error-service run test",
        "test:notification-service": "npm --workspace=services/notification-service run test",
        "test:permission-service": "npm --workspace=services/permission-service run test",
