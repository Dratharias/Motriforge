        "clean:cache-service": "npm --workspace=services/cache-service run clean",
        "clean:audit-service": "npm --workspace=services/audit-service run clean",
        "clean:error-service": "npm --workspace=services/error-service run clean",
        "clean:notification-service": "npm --workspace=services/notification-service run clean",
