# prisma/.env.template

# Database Configuration
# Replace with your actual database credentials
DATABASE_URL="postgresql://username:password@localhost:6969/motriforge?schema=public"

# Shadow Database (for cloud deployments)
# SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/motriforge_shadow?schema=public"

# Development Database (optional)
# DEV_DATABASE_URL="postgresql://username:password@localhost:5432/motriforge_dev?schema=public"

# Test Database (optional)
# TEST_DATABASE_URL="postgresql://username:password@localhost:5432/motriforge_test?schema=public"

# Prisma Configuration
PRISMA_GENERATE_DATAPROXY="false"

# Application Environment
NODE_ENV="development"

# Logging
LOG_LEVEL="info"

# Performance
DATABASE_CONNECTION_LIMIT="20"
DATABASE_POOL_TIMEOUT="20000"

# Security
DATABASE_SSL_MODE="prefer"

# Backup Configuration (optional)
# BACKUP_ENABLED="true"
# BACKUP_INTERVAL="24h"
# BACKUP_RETENTION="7d"