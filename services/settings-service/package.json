{
  "name": "@motriforge/settings-service",
  "version": "1.0.0",
  "description": "MotriForge Settings Service Service",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:rollback": "ts-node src/scripts/rollback.ts",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:reset": "ts-node src/scripts/reset.ts"
  },
  "dependencies": {
    "pg": "^8.12.0",
    "zod": "^3.22.4",
    "hono": "^4.0.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "ioredis": "^5.6.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "vitest": "^3.1.4"
  }
}