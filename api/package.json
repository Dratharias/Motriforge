{
  "name": "@motriforge/api-gateway",
  "version": "1.0.0",
  "description": "MōtriForge API Gateway - Backend for Frontend",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "jose": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.0",
    "tsc-alias": "^1.8.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "api-gateway",
    "bff",
    "microservices",
    "fitness",
    "motriforge"
  ],
  "author": "MōtriForge Team",
  "license": "MIT"
}