{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "rootDir": ".."
  },
  "path": {
    "@/middleware/*": [
      "api/src/middleware/*"
    ],
    "@/router/*": [
      "api/src/router/*"
    ],
    "@/routes/*": [
      "api/src/routes/*"
    ],
    "@/services/*": [
      "api/src/services/*"
    ]
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}